package derek3d;

public class Point3Df {
	private float x,y,z;
	
	Point3Df()
	{
		x = 0.0f;
		y = 0.0f;
		z = 0.0f;
	}
	
	Point3Df(float x, float y, float z)
	{
		this.x = x;
		this.y = y;
		this.z = z;
	}

	public float getX() {
		return x;
	}

	public void setX(float x) {
		this.x = x;
	}

	public float getY() {
		return y;
	}

	public void setY(float y) {
		this.y = y;
	}

	public float getZ() {
		return z;
	}

	public void setZ(float z) {
		this.z = z;
	}
	
	
}
